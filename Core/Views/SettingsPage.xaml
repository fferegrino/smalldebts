<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:cells="clr-namespace:Smalldebts.Core.UI.Controls.Cells"
	x:Class="Smalldebts.Core.UI.Views.SettingsPage">
	<TableView HasUnevenRows="true" HeightRequest="-1">
        <TableRoot>
            <TableSection Title="Cuenta">
                <cells:MenuCell Tapped="SettingCellTapped" x:Name="DisconnectCell" ImageSource="disconnect" Text="XXX"></cells:MenuCell>
            </TableSection>
            <TableSection Title="About">
                <cells:MenuCell Tapped="SettingCellTapped" x:Name="ReportBugCell"  ImageSource="lightbulb" Text="Acerca de"></cells:MenuCell>
                <cells:MenuCell Tapped="SettingCellTapped" x:Name="IdeaCell" ImageSource="lightbulb" Text="Idea"></cells:MenuCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
